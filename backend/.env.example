PORT=4000
NODE_ENV=development

# PostgreSQL
DATABASE_URL=postgres://user:password@localhost:5432/attendance_db

# JWT (required in production; must be at least 16 characters)
JWT_SECRET=change-this-in-production
JWT_EXPIRES_IN=12h

# Optional: bind address and TLS
HOST=0.0.0.0
SSL_KEY_PATH=./cert/key.pem
SSL_CERT_PATH=./cert/cert.pem

# Production: comma-separated allowed origins (e.g. https://admin.school.example.com)
# CORS_ORIGIN=https://admin.school.example.com,https://teacher.school.example.com
